<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content" >

    <ScrollView android:id="@+id/component"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >



            <RelativeLayout android:id="@+id/page_component_ek1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View
                    android:id="@+id/_bg__component_ek2"
                    android:layout_width="410dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/_bg__component_ek2_shape" />


                <ImageView
                    android:id="@+id/rectangle_1"
                    android:layout_width="430dp"
                    android:layout_height="800dp"
                    android:alpha="0.4"
                    android:adjustViewBounds="true"
                    android:contentDescription="rectangle_1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rectangle_1" />

                <ImageView android:id="@+id/itinerary"
                    android:src="@drawable/itinerary"
                    android:contentDescription="itinerary"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="329dp"
                    android:layout_width="52dp"
                    android:layout_height="66dp" />


                <ImageView android:id="@+id/fuel_gas"
                    android:src="@drawable/fuel_gas"
                    android:contentDescription="fuel_gas"
                    android:layout_marginStart="43dp"
                    android:layout_marginTop="76dp"
                    android:layout_width="56dp"
                    android:layout_height="55dp" />

                <ImageView android:id="@+id/licence_plate"
                    android:src="@drawable/licence_plate"
                    android:contentDescription="licence_plate"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="244dp"
                    android:layout_width="51dp"
                    android:layout_height="74dp" />

                <ImageView android:id="@+id/speedometer"
                    android:src="@drawable/speedometer"
                    android:contentDescription="speedometer"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="406dp"
                    android:layout_width="53dp"
                    android:layout_height="60dp" />

                <ImageView android:id="@+id/car"
                    android:src="@drawable/car"
                    android:contentDescription="car"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="173dp"
                    android:layout_width="60dp"
                    android:layout_height="59dp" />

                <ImageView android:id="@+id/cash"
                    android:src="@drawable/cash"
                    android:contentDescription="cash"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="478dp"
                    android:layout_width="50dp"
                    android:layout_height="56dp" />

                <ImageView android:id="@+id/real_ek1"
                    android:src="@drawable/real_ek1"
                    android:contentDescription="real_ek1"
                    android:layout_marginStart="51dp"
                    android:layout_marginTop="693dp"
                    android:layout_width="51dp"
                    android:layout_height="53dp" />

                <ImageView android:id="@+id/gas_pump"
                    android:src="@drawable/gas_pump"
                    android:contentDescription="gas_pump"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="622dp"
                    android:layout_width="52dp"
                    android:layout_height="46dp" />

                <TextView
                    android:id="@+id/txtFuelSaver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="70dp"
                    android:text="@string/fuel_saver_string"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="@color/fuel_saver_color"
                    />

                <EditText
                    android:id="@+id/editNomeV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="14"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="180dp"
                    android:inputType="text"
                    android:hint="Nome do Veículo:"
                    android:textColorHint="@color/black"
                    android:text="" />

                <EditText
                    android:id="@+id/editNumeroP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="14"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="255dp"
                    android:inputType="text"
                    android:hint="Número da Placa:"
                    android:textColorHint="@color/black"
                    android:text="" />

                <EditText
                    android:id="@+id/editDistancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="14"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="340dp"
                    android:inputType="text"
                    android:hint="Distância (Km):"
                    android:textColorHint="@color/black"
                    android:text="" />

                <EditText
                    android:id="@+id/editKml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="14"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="415dp"
                    android:inputType="text"
                    android:hint="Km/L:"
                    android:textColorHint="@color/black"
                    android:text="" />

                <EditText
                    android:id="@+id/editValorC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="14"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="480dp"
                    android:inputType="text"
                    android:hint="Valor do Combustível:"
                    android:textColorHint="@color/black"
                    android:text="" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCalcular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="550dp"
                    android:allowUndo="true"
                    android:ems="14"
                    android:foreground="@drawable/real"
                    android:foregroundGravity="left|center"
                    android:text="Calcular"
                    android:background="@drawable/meu_botao"
                    />

                <TextView
                    android:id="@+id/txtRN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="620dp"
                    android:textAlignment="center"
                    android:text="Litros Necessários:"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txtCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="700dp"
                    android:textAlignment="center"
                    android:text="Custo da Viagem:"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txtR1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="640dp"
                    android:textAlignment="center"
                    android:text=""
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txtR2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="720dp"
                    android:textAlignment="center"
                    android:text=""
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txtCriador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:text="Criado por Klaian C.da Rosa em 21/09/20024" />

            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</HorizontalScrollView>